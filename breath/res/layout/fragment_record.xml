<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="记录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/arc_home_frg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jinrizhengzhuang" />

            <CheckBox
                android:id="@+id/gasp"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/bg_gasp"
                android:button="@null" />

            <CheckBox
                android:id="@+id/breathhold"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="2"
                android:background="@drawable/bg_breathhold"
                android:button="@null" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/activityhinder"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_gravity="top"
                android:layout_weight="2"
                android:background="@drawable/bg_activityhinder"
                android:button="@null" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/nightremind"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/bg_nightremind"
                android:button="@null"
                android:gravity="center" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/cough"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_gravity="top"
                android:layout_weight="2"
                android:background="@drawable/bg_cough"
                android:button="@null" />

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="用药提醒" />

            <ListView
                android:id="@+id/medicineremind"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/urgencymedicine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_jinjiyongyao" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/normal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/backpef" >

        <Button
            android:id="@+id/pef"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_jilupef" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:text="PEF记录"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/backpef"
        android:visibility="gone" >

        <Button
            android:id="@+id/xiugaipef"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="@drawable/btn_xiugai" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/xiugaipef"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="26L/min"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"
            android:text="PEF记录"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>